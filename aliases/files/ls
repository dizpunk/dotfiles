# ls aliases

if [[${OS} == 'Darwin']]; then

    alias ll='ls -AGlh'
    alias ld='ls -AGlhd -- */'

elif [[${OS} == 'Linux']]; then

    alias lf='ls -Alh | grep -v ^d'
    alias ll='ls -Alh --group-directories-first --color=always'
    alias ld='ls -Alh --group-directories-first --color=always | grep ^d --color=never'

fi
